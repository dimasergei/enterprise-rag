# API Settings
APP_NAME=EnterpriseRAG
VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1

# LLM Settings (Gemini-2.0-Flash)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
LLM_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# Vector Store (Supabase pgvector)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
COLLECTION_NAME=documents

# Redis Cache (Upstash)
REDIS_URL=redis://localhost:6379
REDIS_REST_URL=your_upstash_rest_url_here
REDIS_REST_TOKEN=your_upstash_rest_token_here
CACHE_TTL=3600
SEMANTIC_CACHE_THRESHOLD=0.95

# Database (Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/enterpriserag

# Retrieval Settings
TOP_K_RETRIEVAL=20
TOP_K_RERANK=5
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Performance
MAX_CONCURRENT_REQUESTS=100
TIMEOUT_SECONDS=30

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "https://*.vercel.app"]
